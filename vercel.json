{
  "version": 2,
  "builds": [
    {
      "src": "server/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/app.py"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/server/app.py"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/client/assets/$1"
    },
    {
      "source": "/(.*)\\.(svg|png|jpg|jpeg|ico|json|js|css)",
      "destination": "/client/$1.$2"
    },
    {
      "source": "/(.*)",
      "destination": "/client/index.html"
    }
  ]
}
